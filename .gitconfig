# This is Git's per-user configuration file.
[user]
	name = "Justin Barnowski"
	email = jbarno@uchicago.edu
[push]
	default = simple
[rerere]
	enabled = true
[pull]
	rebase = true
[apply]
	whitespace = fix
[alias]
	br = branch
	ci = commit
	co = checkout
	df = diff
	g = grep -I
	lg = log -p
	pp = !"echo 'Pull'; git pull; echo 'Push'; git push"
	rb = rbranch
	rv = review
	st = status
	ksdiff = difftool -y -t Kaleidoscope
	delete-merged = !"branch --merged | grep -v '*' | xargs -n 1 git branch -d"
[branch]
	autosetuprebase = always
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
